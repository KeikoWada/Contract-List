@model MvcContract.Models.ContractJobTitleViewModel

@{
    ViewData["Title"] = "Index";
}
<h2>Contract List</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Contracts" asp-action="Index" method="get">
    <p>
        <select asp-for="contractJobTitle" asp-items="Model.jobtitles">
            <option value="">All</option>
        </select>

        First Name: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.contracts[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contracts[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contracts[0].JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contracts[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contracts[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.contracts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
